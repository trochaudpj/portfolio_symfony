{% extends template ~ '/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<!-- Breadcrumb Begin -->                     
    <div class="breadcrumb-option spad set-bg" data-setbg={{ asset(template ~ '/img/breadcrumb-bg.jpg') }}>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Login</h2>
                        <div class="breadcrumb__links">
                            <a href="{{ path('home') }}">Home</a>
                            <span>Login</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->
<!-- LOGIN  Section Begin -->
    <section class="latest spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title center-title">
                        
                        <form method="post" class="mb3 ">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }} // {{ app.user.pseudo }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <span class="mb-3">Please <a href="{{ path('app_register') }}">sign in</a> Or login </div></span>
                        
                        <span><label for="inputEmail"><span>Email</span></label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus>
                        <label for="inputPassword"><span>Password</span></label>
                        <input type="password" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" required>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            {#
                                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                See https://symfony.com/doc/current/security/remember_me.html

                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" name="_remember_me"> Remember me
                                    </label>
                                </div>
                            #}

                        <button class="btn btn-lg btn-primary" type="submit">
                            Sign in
                        </button></span>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Latest Blog Section End -->

{% endblock %}
