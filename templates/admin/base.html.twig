{% set route = app.request.attributes.get('_route') %}
{% set societe = societe.All() %}
{% set social = social.link() %}
{% set multiLangues = configuration.multiLangues() %}
<!DOCTYPE html>
<html lang="{{ app.request.locale|split('_')|first|default('fr') }}">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta name="author" content="{{ configuration.get('site', 'name') }}">
        <meta name="description" content="{% block meta_description %}{% endblock %}">
        <meta name="keywords" content="{% block meta_keywords %}{% endblock %}">
        <meta name="robots" content="index, follow, archive, snippet, odp, imageindex, translate, cache">
        <meta property="og:title" content="{{ configuration.get('site', 'name') }} {{ configuration.get('site', 'slogan') }}"/>
        <meta property="og:image" content="{{ absolute_url(asset('images/societe') ~ '/' ~ societe.societe.tabs.imageSocial.value) }}"/>
        <meta property="og:url" content="{{ url('home') }}"/>
        <meta property="og:site_name" content="{{ configuration.get('site', 'name') }}"/>
        <meta property="og:description" content="{{ configuration.get('site', 'metaDesc') }}"/>
        <title>{% block title %}{% endblock %}</title>
        {% block canonical %}{% endblock %}
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('images/icones/apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('images/icones/favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('images/icones/favicon-16x16.png') }}">
        <link rel="manifest" href="{{ asset('images/icones/site.webmanifest') }}">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
        {% block stylesheets %}{% endblock %}

        <style>
            .global {
                background-color: lightgray;
                color: black;
                border: 4px solid black;
                border-radius:10px;
                margin: 40px;
                padding: 40;
                }
        </style>

    </head>
    <body>
         <div class="global">
            <li class="active"><a href="{{ path('home') }}">Home</a></li>
            {% block body %}{% endblock %}
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script>
            {% block javascripts %}{% endblock %}
        </div>
    </body>
</html>